<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <h1 class="text-white text-4xl text-center font-serif">Notion ðŸ˜ƒ</h1>
        <div class="form p-10 text-white ">
            <form action="/create" method="post">
                <!-- title input goes here -->
                <input type="text" class="block px-5 py-2 bg-zinc-700 w-full rounded-md outline-none"
                    placeholder="Your title goes here..." name="title">
                <!-- detailed input goes here  -->
                <textarea name="details"
                    class="block px-5 mt-2 resize-none py-2 bg-zinc-700 w-full rounded-md outline-none"
                    placeholder="Write your task details.."></textarea>
                <!-- submit button -->
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task">
            </form>

        </div>

        <!-- tasks -->
        <div class="tasks p-10 flex flex-wrap gap-3">
            <!-- so if your files folder is not empty then you have to do below stuff -->
            <%if(files.length>0){%>
                <%files.forEach(function(value){%>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <!-- file name which is equal value -->
                        <h1 class="text-white text-3xl tracking-tighter">
                            <%=value%>
                        </h1>
                        <div class="flex justify-between items-center w-full">
                            <!-- read more link -->
                            <a class="text-blue-500 inline-block mt-3" href="/file/<%=value%>">Read more</a>
                            <!-- edit link -->
                            <a class="text-zinc-400 mt-3" href="/edit/<%=value%>">edit</a>
                            <!-- to delete the file -->
                            <a class="text-red-500" href="/delete">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                    class="size-5">
                                    <path fill-rule="evenodd"
                                        d="M8.75 1A2.75 2.75 0 0 0 6 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 1 0 .23 1.482l.149-.022.841 10.518A2.75 2.75 0 0 0 7.596 19h4.807a2.75 2.75 0 0 0 2.742-2.53l.841-10.52.149.023a.75.75 0 0 0 .23-1.482A41.03 41.03 0 0 0 14 4.193V3.75A2.75 2.75 0 0 0 11.25 1h-2.5ZM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4ZM8.58 7.72a.75.75 0 0 0-1.5.06l.3 7.5a.75.75 0 1 0 1.5-.06l-.3-7.5Zm4.34.06a.75.75 0 1 0-1.5-.06l-.3 7.5a.75.75 0 1 0 1.5.06l.3-7.5Z"
                                        clip-rule="evenodd" />
                                </svg>
                            </a>
                        </div>
                    </div>
                    <%})%>
                        <%}else{%>
                            <h1 class="text-zinc-500 text-xl">No tasks yet..</h1>
                            <% }%>
        </div>
    </div>

</body>

</html>